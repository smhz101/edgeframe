        { "slug": "small", "size": "12px", "name": "Small" },
        { "slug": "regular", "size": "16px", "name": "Regular" },
        { "slug": "large", "size": "36px", "name": "Large" },
        { "slug": "larger", "size": "48px", "name": "Larger" }
